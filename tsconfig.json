{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "strictNullChecks": true,
        "module": "ESNext",
        "target": "es6",
        "lib": ["esnext", "dom", "dom.iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@homework-task/*": ["src/*"]
        }
    },
    "include": ["src", "globals.d.ts"]
}
